<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/deleteItemConfirmMessage"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        android:text="Are you sure you want to remove the item &quot;&quot;?"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/deleteItemNoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="#7f1d1d"
        android:text="No"
        app:layout_constraintStart_toStartOf="@+id/deleteItemConfirmMessage"
        app:layout_constraintTop_toBottomOf="@+id/deleteItemConfirmMessage" />

    <Button
        android:id="@+id/deleteItemYesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:backgroundTint="#115E59"
        android:text="Yes"
        app:layout_constraintEnd_toEndOf="@+id/deleteItemConfirmMessage"
        app:layout_constraintTop_toBottomOf="@+id/deleteItemConfirmMessage" />

</androidx.constraintlayout.widget.ConstraintLayout>